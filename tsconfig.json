{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Use bundler resolution
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Updated jsx setting

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true, // Ensure compatibility

    /* Paths */
    "baseUrl": ".", // Base URL for path mapping
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"], // Include only src directory
  "references": [{ "path": "./tsconfig.node.json" }] // Reference node config
}
